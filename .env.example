# Environment Variables Configuration for Code Explainer

# API Configuration
CODE_EXPLAINER_API_KEY=your-secret-api-key-here
CODE_EXPLAINER_API_KEYS=key1,key2,key3  # Comma-separated for multiple keys

# CORS Configuration (comma-separated origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501,https://yourdomain.com

# Model Configuration
CODE_EXPLAINER_MODEL_PATH=./results
CODE_EXPLAINER_CONFIG_PATH=./configs/default.yaml
CODE_EXPLAINER_PRECISION=fp16  # Options: fp32, fp16, bf16, 8bit

# Device Configuration
CODE_EXPLAINER_DEVICE=cuda  # Options: cuda, mps, cpu

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/code-explainer.log

# Cache Configuration  
CACHE_ENABLED=true
CACHE_DIR=.cache/explanations
CACHE_MAX_SIZE=1000
CACHE_TTL_SECONDS=86400

# Retrieval Configuration
CODE_EXPLAINER_RETRIEVAL_WARMUP=true
RETRIEVAL_INDEX_PATH=data/code_retrieval_index.faiss

# Grafana Configuration (for monitoring profile)
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Database Configuration (optional)
# DATABASE_URL=postgresql://user:password@localhost:5432/codeexplainer

# Redis Configuration (optional)
# REDIS_URL=redis://localhost:6379/0

# Rate Limiting (if slowapi is installed)
# RATE_LIMIT_PER_MINUTE=60

# Development Mode
DEV=false
